<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:id="@+id/linearLayout"
                              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                              android:layout_marginStart="24dp" android:layout_marginTop="8dp"
                              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                              app:layout_constraintBottom_toBottomOf="parent">
                    <TextView android:id="@+id/main_user_name"
                              tools:text="안녕하세요! OOO님"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/main_user_days"
                              tools:text="46 일차"
                              android:layout_width="wrap_content"
                              android:textSize="48dp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView android:id="@+id/main_user_profile_image" android:layout_width="72dp"
                           android:layout_height="72dp" app:layout_constraintEnd_toEndOf="parent"
                           android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                           android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                    android:id="@+id/main_user_green_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:id="@+id/main_user_friends_title" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          tools:text="함께하고 있는 친구들" app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="24dp"
                          android:layout_marginStart="24dp" android:layout_marginRight="24dp"
                          android:layout_marginEnd="24dp" android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:id="@+id/main_user_projects_title" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          tools:text="현재 진행중인 프로젝트" app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="24dp"
                          android:layout_marginStart="24dp" android:layout_marginRight="24dp"
                          android:layout_marginEnd="24dp" android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>